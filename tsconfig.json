{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "allowJs": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strictNullChecks": false,
    "paths": {
      "@territory-offline-workspace/ui-components": [
        "libs/ui-components/src/index.ts"
      ],
      "@territory-offline-workspace/shared-services": [
        "libs/shared-services/src/index.ts"
      ],
      "@territory-offline-workspace/shared-utils": [
        "libs/shared-utils/src/index.ts"
      ],
      "@territory-offline-workspace/shared-interfaces": [
        "libs/shared-interfaces/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}

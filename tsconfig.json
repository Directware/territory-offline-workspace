{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "@territory-offline-workspace/ui-components": [
        "libs/ui-components/src/index.ts"
      ],
      "@territory-offline-workspace/api": ["libs/api/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
